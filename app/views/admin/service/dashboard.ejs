<div class="nk-block-head nk-block-head-sm">
    <div class="nk-block-between">
        <div class="nk-block-head-content">
            <h3 class="nk-block-title page-title text-uppercase">Tableau de bord service</h3>
            <div class="nk-block-des text-soft">
                <p></p>
            </div>
        </div><!-- .nk-block-head-content -->
    </div><!-- .nk-block-between -->
</div><!-- .nk-block-head -->
<div class="nk-block">
    <div class="row g-gs">
        <div class="col-md-3">
            <div class="card card-bordered card-full">
                <div class="card-inner">
                    <div class="card-title-group align-start mb-0">
                        <div class="card-title">
                            <h6 class="subtitle">SERVICE ACTIF</h6>
                        </div>
                    </div>
                    <div class="card-amount">
                        <span class="amount">NaN</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card card-bordered card-full">
                <div class="card-inner">
                    <div class="card-title-group align-start mb-0">
                        <div class="card-title">
                            <h6 class="subtitle">SERVICE SUSPENDU</h6>
                        </div>
                    </div>
                    <div class="card-amount">
                        <span class="amount">NaN</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row g-gs">
        <div class="col-lg-6">
            <div class="card card-bordered card-full ">
                <div class="card-inner">
                    <div class="card-title-group">
                        <div class="card-title">
                            <h6 class="title"><span class="mr-2">Nouveaux services</span><a href="#" class="link d-none d-sm-inline">Voir plus</a></h6>
                        </div>
                    </div>
                </div>
                <div class="card-inner p-0 border-top">
                    <div class="nk-tb-list nk-tb-orders">
                        <div class="nk-tb-item nk-tb-head">
                            <div class="nk-tb-col tb-col-sm"><span>Date</span></div>
                            <div class="nk-tb-col tb-col-xxl"><span>Time</span></div>
                            <div class="nk-tb-col tb-col-xxl"><span>Ref</span></div>
                            <div class="nk-tb-col text-right"><span>Amount</span></div>
                        </div>
                        <% service.forEach(function (service) { %>
                        <div class="nk-tb-item">
                            <div class="nk-tb-col tb-col-sm"><span class="tb-sub"><%- service.deadline %></span></div>
                            <div class="nk-tb-col tb-col-xxl"><span class="tb-sub">11:37 PM</span></div>
                            <div class="nk-tb-col tb-col-xxl"><span class="tb-sub text-primary"><%- service.id %></span></div>
                            <div class="nk-tb-col tb-col-sm text-right"><span class="tb-sub tb-amount"><%- service.price %> <span>EUR</span></span></div>
                        </div>
                        <% }) %>
                    </div>
                </div>
                <div class="card-inner-sm border-top text-center d-sm-none"><a href="#" class="btn btn-link btn-block">See History</a></div>
            </div>
        </div>

    </div>

</div>