<section class="section">
    <div class="start-screen__bg-container">
        <div class="start-screen__bg" style="background-image: url(/assets/front/img/bg_1.png);background-position: center bottom;"></div>
    </div>
</section>
<section style="position: relative; top: -160px; margin-top: 15px;">
    <div class="container">
        <div class="row">

            <%- include("../partial/sidebar.ejs") %>

            <div class="col-lg-9 col-md-9 col-sm-12">
                <h3 onclick="document.getElementById('service_link').click();" class="d-flex"><a id="service_link" class="d-none" href="/fr/espace-client/mes-services"></a><div class="fa-button" href="/fr/espace-client"><i class="fad fa-chevron-left"></i></div> Portefeuille</h3>
                <div class="row">
                    <div class="col-12 mt-10">
                        <div class="row p-0 m-0">
                            <div class="col-6 p-0">
                                <h6>Historique de mon compte</h6>
                            </div>
                            <div class="col-6 p-0">
                                <h6 class="text-right text-primary"><a href="/fr/espace-client/portefeuille/crediter">Créditer mon compte</a></h6>
                            </div>
                        </div>
                    </div>
                    
                    <% wallet.forEach(function (wallet) { %>
                    <div class="col-12">
                        <div class="mt-3 wallet_card">
                            <div class="row p-2 pt-3 pb-3 text-center" style="">
                                <div class="col"><%- wallet.date %></div>
                                <div class="col"><%- wallet.name %></div>
                                <% if (wallet.type === 1) { %>
                                <div class="col text-success"><%- wallet.soldate %> €</div>
                                <% } %>
                                <% if (wallet.type === 0) { %>
                                <div class="col text-danger">-<%- wallet.soldate %> €</div>
                                <% } %>
                            </div>
                        </div>
                    </div>
                    <% }) %>
                    <% if (!wallet.length > 0) { %>
                    <div class="col-12">
                        <p class="text-center mt-4">Vous n'avez pas de transaction</p>
                    </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</section>